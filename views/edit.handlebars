<form action="/restaurants/{{restaurant._id}}/edit" method="POST">
  <div class="createForm d-flex flex-column  justify-content-center mx-auto" style="width: 27vw;">
      <div class="form row d-flex flex-row">
        <label for="staticName" class="col-sm-2 col-form-label mr-5">name:</label>
        <input type="text" placeholder="name" name="name" class="my-2" value="{{restaurant.name}}" required>
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticName_en" class="col-sm-2 col-form-label mr-5">name_en:</label>
        <input type="text" placeholder="name_en" name="name_en" class="my-2" value="{{restaurant.name_en}}">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticCategory" class="col-sm-2 col-form-label mr-5">category:</label>
        <input type="text" placeholder="category" name="category" class="my-2" value="{{restaurant.category}}">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticImage" class="col-sm-2 col-form-label mr-5">image:</label>
        <input type="text" placeholder="image" name="image" class="my-2" value="{{restaurant.image}}">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticLocation" class="col-sm-2 col-form-label mr-5">location:</label>
        <input type="text" placeholder="location" name="location" class="my-2" value="{{restaurant.location}}">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticPhone" class="col-sm-2 col-form-label mr-5">phone:</label>
        <input type="text" placeholder="phone" name="phone" class="my-2" value="{{restaurant.phone}}">
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticGoogle_map" class="col-sm-2 col-form-label mr-5">google_map:</label>
        <input type="text" placeholder="google_map" name="google_map" class="my-2" value="{{restaurant.google_map}}">  
      </div>
      <div class="form row d-flex flex-row">
        <label for="staticRating" class="col-sm-2 col-form-label mr-5">rating:</label>
        <input type="number" placeholder="rating" name="rating" class=" my-2" min="0" max="5" step="0.1" value="{{restaurant.rating}}">  
      </div>  
      <div class="form row d-flex flex-row">
        <label for="staticDescription" class="col-sm-2 col-form-label mr-5">description:</label>
        <input type="text" placeholder="description" name="description" class=" my-2" value="{{restaurant.description}}">
      </div>    
  </div>  
  <button type="submit" class="btn btn-warning" >Save</button>
  <a href="/">back</a>
</form>